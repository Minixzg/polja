#include<stdio.h>
main()
{
	int  i, a[5], des[5];
	for (i = 0; i < 5; i++) {
		printf(" \n Unesi %d. troznamenkasti broj: ", i + 1);
		scanf("%d", &a[i]);
		des[i] = a[i] % 10;
	}
	for (i = 0; i < 7; i++) {
		if (des[i] % 3 == 0)
			printf(" \n Znamenka desetica %d. broja (%d) je dljeljiva s 3.\n", i + 1, des);

	}

}
